<h1>Articles Listing Page</h1>

<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Description</th>
            <th>Author</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @articles.each do |article| %>
            <tr>
                <td><%= article.id %></td>
                <td><%= article.title %></td>
                <td><%= article.description %></td>
                <td><%= article.author %></td>
                <td><%= link_to 'Show', article_path(article.id) %></td>
                <td><%= link_to 'Delete', article_path(article.id), method: :delete %></td>
            </tr>
        <% end %>
    </tbody>
</table>